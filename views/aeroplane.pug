extends layout

block content
  h1= title
   div(class="container-fluid")
        div(class="row")
            -
                let Aeroplane  = [
                      {
                        "Aeroplane_name": "jet flight",
                        "Sitting_size": 500,
                        "Aeroplane_cost": 10000
                    },
                    { 
                        "Aeroplane_name": "kingfisher",
                        "Sitting_size": 2000,
                        "Aeroplane_cost": 15000
                    },
                    {
                        "Aeroplane_name": "indigo",
                        "Sitting_size": 750,
                        "Aeroplane_cost": 20000
                    },                   
                ]
            each c,index in Aeroplane 
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.Aeroplane_name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.Sitting_size}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.Aeroplane_cost}

                script.                
                      function buy(num)
                      {
                            alert(`You purchased item ${num+1}`)
                      }
  
 



